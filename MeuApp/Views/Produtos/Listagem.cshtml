@model IEnumerable<ProdutoModel>
@{
    ViewData["Title"] = "Lista de Produtos";
}

<h1>@ViewData["Title"]</h1>


<a asp-action="Cadastrar" class="btn btn-lg btn-primary mt-3 mb-3">Novo</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Produto</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.NomeProduto</td>
                <td>
                    <a asp-action="Atualizar" asp-route-id="@item.Id" class="btn btn-outline-info">Editar</a>
                    <a asp-action="Excluir" asp-route-id="@item.Id" class="btn btn-outline-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>